model Article {
  id        String   @id @default(cuid())
  title     String
  content   String   @db.Text
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Guide {
  id        String   @id @default(cuid())
  element   String
  description   String   @db.Text
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Requests {
  id        String   @id @default(cuid())
  input     String
  solution  String   @db.Text
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}